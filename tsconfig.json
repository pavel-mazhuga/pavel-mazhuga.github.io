{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es2015", "es2017", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strict": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
    },
    "exclude": [
        "node_modules",
        "external"
    ]
}
  