{
    "root": true,
    "parser": "babel-eslint",
    "extends": ["airbnb-base", "plugin:react/recommended", "prettier"],
    "env": {
        "browser": true,
        "jest/globals": true
    },
    "plugins": ["import", "jest", "react"],
    "rules": {
        "no-console": "off",
        "no-param-reassign": [2, { "props": false }],
        "unicode-bom": ["warn", "never"],
        "max-len": ["warn", 120, 4],
        "indent": ["warn", 4],
        "max-lines": [
            "warn",
            {
                "max": 300,
                "skipBlankLines": true
            }
        ],
        "import/order": "off",
        "sort-requires/sort-requires": "off",
        "linebreak-style": "off",
        "arrow-parens": "off",
        "no-underscore-dangle": "off",
        "no-plusplus": "off",
        "import/prefer-default-export": "off"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "settings": {
        "react": {
            "pragma": "h"
        }
    }
}
