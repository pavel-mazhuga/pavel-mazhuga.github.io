{
    "root": true,
    "parser": "babel-eslint",
    "extends": "airbnb-base",
    "env": {
        "browser": true,
        "jquery": true,
        "jest/globals": true
    },
    "plugins": ["import", "jest"],
    "rules": {
        "no-console": "off",
        "no-param-reassign": [2, { "props": false }],
        "unicode-bom": ["warn", "never"],
        "max-len": ["warn", 120, 4],
        "indent": ["warn", 4],
        "max-lines": [
            "warn",
            {
                "max": 300,
                "skipBlankLines": true
            }
        ],
        "import/order": "off",
        "sort-requires/sort-requires": "off",
        "linebreak-style": "off",
        "arrow-parens": ["error", "always"],
        "no-underscore-dangle": "off",
        "no-plusplus": "off"
    }
}
