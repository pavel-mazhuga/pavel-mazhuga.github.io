{
    "compilerOptions": {
        "strict": true,
        "allowJs": false,
        "checkJs": false,
        "jsx": "react",
        "target": "esnext",
        "module": "esnext",
        "lib": ["dom", "es2015", "es2016", "es2017"],
        "jsxFactory": "h",
        "noEmitHelpers": true,
        "importHelpers": true,
        "noEmit": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": ["./src", "src/js/global.d.ts", "next-env.d.ts", "**/*.js", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
